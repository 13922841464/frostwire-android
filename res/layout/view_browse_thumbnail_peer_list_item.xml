<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list_view_right_side"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/view_browse_peer_list_item_file_thumbnail"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_gravity="left|center_vertical"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="0dp"
        android:background="@drawable/polaroid_frame"
        android:contentDescription="@null"
        android:padding="8dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/view_browse_peer_list_item_file_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_margin="3sp"
            android:singleLine="true"
            android:text="@string/dummy_title"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/view_browse_peer_list_item_lock_toggle"
                android:layout_width="48sp"
                android:layout_height="48sp"
                android:background="@null"
                android:contentDescription="@null"
                android:scaleType="fitCenter"
                android:layout_gravity="left|bottom"
                android:layout_margin="3dp"
                android:src="@drawable/unlocked" />

            <TextView
                android:layout_gravity="bottom"
                android:layout_margin="3dp"
                android:id="@+id/view_browse_peer_list_item_file_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dummy_size"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ffe9a54c" />
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/view_browse_peer_list_action_button"
        android:layout_width="48sp"
        android:layout_height="48sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="right|center_vertical"
        android:layout_marginBottom="5sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="5sp"
        android:background="@null"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/action_button" />

</LinearLayout>