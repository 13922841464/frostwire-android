<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:frostwire="http://schemas.android.com/apk/res/com.frostwire.android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_basic_blue"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/app_menu_item_line" />

    <!-- Dummy item to prevent EditText from receiving focus at startup -->

    <LinearLayout
        android:id="@+id/view_search_input_linearlayout_dummy"
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal" />

    <com.frostwire.android.gui.views.ClearableEditTextView
        android:id="@+id/view_search_input_text_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        frostwire:clearable_hint="@string/search_label" />

    <RadioGroup
        android:id="@+id/view_search_input_radiogroup_file_type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_dark_blue"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/view_search_input_radio_audio"
            style="@style/SearchInputFileTypeButton"
            android:background="@drawable/browse_peer_audio_button_selector" />

        <RadioButton
            android:id="@+id/view_search_input_radio_videos"
            style="@style/SearchInputFileTypeButton"
            android:background="@drawable/browse_peer_video_button_selector" />

        <RadioButton
            android:id="@+id/view_search_input_radio_pictures"
            style="@style/SearchInputFileTypeButton"
            android:background="@drawable/browse_peer_picture_button_selector" />

        <RadioButton
            android:id="@+id/view_search_input_radio_applications"
            style="@style/SearchInputFileTypeButton"
            android:background="@drawable/browse_peer_application_button_selector" />

        <RadioButton
            android:id="@+id/view_search_input_radio_documents"
            style="@style/SearchInputFileTypeButton"
            android:background="@drawable/browse_peer_document_button_selector" />

        <RadioButton
            android:id="@+id/view_search_input_radio_torrents"
            style="@style/SearchInputFileTypeButton"
            android:background="@drawable/browse_peer_torrent_button_selector" />
    </RadioGroup>

</LinearLayout>