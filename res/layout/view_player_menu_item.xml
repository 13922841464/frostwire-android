<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/player_menu_item_background_selector"
    android:clickable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/view_player_menu_item_thumbnail"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_gravity="left|center_vertical"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/polaroid_frame"
        android:contentDescription="@null"
        android:padding="4dp"
        android:src="@android:color/black" />

    <TextView
        android:id="@+id/view_player_menu_item_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|left"
        android:layout_toRightOf="@+id/view_player_menu_item_thumbnail"
        android:singleLine="true"
        android:text="@string/dummy_title"
        android:textColor="#ffffffff"
        android:textSize="12dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/view_player_menu_item_artist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/view_player_menu_item_thumbnail"
        android:layout_alignLeft="@+id/view_player_menu_item_title"
        android:layout_below="@+id/view_player_menu_item_title"
        android:singleLine="true"
        android:text="@string/dummy_title"
        android:textColor="#ffffffff"
        android:textSize="12dp"
        android:textStyle="bold" />

</RelativeLayout>